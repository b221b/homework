<script>
    const express = require('express');
    const mysql = require('mysql');
    const app = express();

    // Создайте подключение к вашей базе данных здесь
    const connection = mysql.createConnection({
        host: 'localhost',
        user: 'root',
        password: '',
        database: 'javascript'
    });

    // Асинхронная функция deleteRecord, удаляющая запись на основе id
    app.delete('/delete/:id', (req, res) => {
        const id = req.params.id;
        const sqlQuery = 'DELETE FROM models WHERE id = ?';

        connection.query(sqlQuery, [id], (error, results, fields) => {
            if (error) {
                console.error('Ошибка при удалении записи: ', error);
                res.status(500).send('Ошибка сервера');
                return;
            }
            res.send('Запись была успешно удалена');
        });
    });
</script>